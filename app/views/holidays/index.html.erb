<% provide(:title, 'Holidays') %>

<%= render 'static_pages/month_view_panel' %>

<h1>Manage Holidays - <%= Date::MONTHNAMES[@view.month] %></h1>

<div class="holidays_container">

  <table class="table table-striped">
    <thead>
      <tr>
        <th>User</th>
        <th>Days off</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @holidays.each do |holiday| %>
        <tr>
          <td><%= holiday.user.name %></td>
          <td><%= holiday.days_off %></td>
          <td><%= link_to 'Delete', holiday, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

<%= render 'form' %>
</div>

<div style="clear:both"></div>