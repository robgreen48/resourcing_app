<%= form_for(@new_planned_hour) do |f| %>

  <div class="form-group">
    <%= f.label "Hours" %><br>
    <%= f.number_field :number %>
  </div>
  <div class="form-group">
    <%= f.hidden_field :client_id, :value => this_client %>
  </div>
  <div class="form-group">
    <%= f.label :user_id %><br>
    <%= f.collection_select :user_id, @user, :id, :name %>
  </div>
  <div class="field">
    <%= f.hidden_field :month, :value => session[:month_view] %> 
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
