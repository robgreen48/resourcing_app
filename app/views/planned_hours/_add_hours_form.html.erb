<%= form_for(@new_planned_hour) do |f| %>

  <div class="form-group">
    <%= f.label :number %><br>
    <%= f.number_field :number %>
  </div>
  <div class="form-group">
    <!-- <%= f.label :client_id %><br> -->
    <%= f.hidden_field :client_id, :value => this_client %>
  </div>
  <div class="form-group">
    <%= f.label :user_id %><br>
    <!-- <%= f.number_field :user_id %> -->
    <%= f.collection_select :user_id, @user, :id, :name %>
  </div>
  <div class="field">
    <!-- <%= f.label :month %><br> -->
    <%= f.hidden_field :month, :value => DateTime.new(Time.now.year, Time.now.month, 1, 0, 0, 0, "+00:00") %> 
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
