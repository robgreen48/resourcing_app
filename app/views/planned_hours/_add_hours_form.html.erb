<%= form_for @new_planned_hour, :html => {:class => "form-inline"}  do |f| %>

  <div class="form-group">
    <%= f.number_field :number %>
  </div>
  <div class="form-group">
    <%= f.hidden_field :client_id, :value => this_client %>
  </div>
  <div class="form-group">
    <%= f.collection_select :user_id, @user, :id, :name %>
  </div>
  <div class="form-group">
    <%= f.hidden_field :month, :value => session[:month_view] %> 
  </div>
  <div class="form-group">
    <%= f.submit "Add Planned Hours" %>
  </div>
<% end %>
