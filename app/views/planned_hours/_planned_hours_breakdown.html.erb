<table class="table table-striped" id="planned_hours_breakdown_table">
  <thead>
    <tr>
      <th>User</th>
      <th>Hours</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @planned_hours.each do |planned_hour| %>

      <% if planned_hour.client_id == this_client %>
        <tr>
          <td class="user_name"><%= planned_hour.user.name %></td>
          <td><%= render 'form', :planned_hour => planned_hour %></td>
          <td><%= link_to 'Delete', planned_hour, method: :delete, data: { confirm: 'Are you sure?' }, :remote => true %></td>
        </tr>
      <% end %>
      
    <% end %>

  </tbody>
</table>